<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georgwestner.de.ticedytac.StartScreen">

    <Button
        android:text="1 Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:onClick="startSingle"
        android:id="@+id/single" />

    <Button
        android:text="2 Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:id="@+id/two"
        android:onClick="startTwo"
        android:layout_below="@+id/single"
        android:layout_alignStart="@+id/single" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
